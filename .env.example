# =====================================================
# TIS TIS PLATFORM - Variables de Entorno
# =====================================================

# ======================
# AI PROVIDERS
# ======================

# Anthropic Claude API (Requerido)
# Get your API key at https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API (Requerido para generación de prompts y Business Insights)
# Get your API key at https://aistudio.google.com/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (Requerido para Discovery Chat)
# Get your API key at https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# SUPABASE (Database + Auth)
# ======================
# Get your keys at https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ======================
# STRIPE (Pagos de suscripción)
# ======================
# Get your keys at https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Webhook secrets - Get at https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your_connect_webhook_secret

# Plan Price IDs - Get at https://dashboard.stripe.com/products
# These are required for trial conversion to paid subscriptions
STRIPE_STARTER_PLAN_PRICE_ID=price_your_starter_price_id
STRIPE_ESSENTIALS_PLAN_PRICE_ID=price_your_essentials_price_id
STRIPE_GROWTH_PLAN_PRICE_ID=price_your_growth_price_id

# ======================
# VAPI (Voice Agent - Llamadas AI)
# ======================
# Get your API key at https://dashboard.vapi.ai/api-keys
VAPI_API_KEY=your_vapi_api_key_here
# Webhook secret for verifying VAPI callbacks (required in production)
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret_here

# ======================
# ELEVENLABS (Voice Preview - Opcional)
# ======================
# Only required for voice preview functionality
# Get your API key at https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ======================
# RESEND (Email Transaccional)
# ======================
# Get your API key at https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=TIS TIS <noreply@tistis.com>
EMAIL_REPLY_TO=hola@tistis.com

# ======================
# CRON JOBS (Tareas programadas)
# ======================
# Secret para autenticar llamadas a endpoints /api/cron/*
# Genera uno random: openssl rand -hex 32
CRON_SECRET=your_random_secret_here

# ======================
# ADMIN API
# ======================
# Secret para autenticar llamadas a endpoints /api/admin/*
# Genera uno random: openssl rand -hex 32
# Required in production for admin operations
ADMIN_API_KEY=your_admin_api_key_here

# ======================
# INTERNAL SERVICES
# ======================
# API key for internal service-to-service calls (email API, etc.)
# Genera uno random: openssl rand -hex 32
# Required in production
INTERNAL_API_KEY=your_internal_api_key_here

# ======================
# WHATSAPP BUSINESS API
# ======================
# Token for verifying WhatsApp webhook subscription
# Create your own random token
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here
# App secret for signature verification (from Meta Developer Console)
WHATSAPP_APP_SECRET=your_whatsapp_app_secret_here

# ======================
# APP CONFIGURATION
# ======================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_URL=http://localhost:3000
NODE_ENV=development

# ======================
# MULTI-TENANT
# ======================
# Default tenant ID for single-tenant deployments or development
NEXT_PUBLIC_DEFAULT_TENANT_ID=a0000000-0000-0000-0000-000000000001
