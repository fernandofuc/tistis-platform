<!-- =====================================================
     TIS TIS PLATFORM - Configure Dialog
     Sync configuration options
     ===================================================== -->

<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <?include ..\Includes\Variables.wxi ?>

  <Fragment>
    <!-- ========================================
         CONFIGURE DIALOG
         ======================================== -->

    <UI>
      <Dialog Id="ConfigureDlg_TisTis" Width="370" Height="270" Title="!(loc.ConfigureTitle)">

        <!-- Banner Image -->
        <Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44"
                 TabSkip="no" Text="!(loc.WelcomeDlgBitmap)" />

        <!-- Horizontal Line -->
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <!-- Title -->
        <Control Id="Title" Type="Text" X="20" Y="50" Width="330" Height="20"
                 Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Configuración de Sincronización" />

        <!-- Description -->
        <Control Id="Description" Type="Text" X="20" Y="70" Width="330" Height="25"
                 Transparent="yes" NoPrefix="yes">
          <Text>
Seleccione qué datos desea sincronizar con TIS TIS Platform:
          </Text>
        </Control>

        <!-- Sync Options Group -->
        <Control Id="SyncGroup" Type="GroupBox" X="20" Y="95" Width="330" Height="90"
                 Text="Opciones de Sincronización" />

        <!-- Sync Sales Checkbox -->
        <Control Id="SyncSalesCheck" Type="CheckBox" X="35" Y="112" Width="290" Height="17"
                 Property="SYNC_SALES" CheckBoxValue="1"
                 Text="Sincronizar Ventas (cada 30 segundos)" />

        <!-- Sync Menu Checkbox -->
        <Control Id="SyncMenuCheck" Type="CheckBox" X="35" Y="130" Width="290" Height="17"
                 Property="SYNC_MENU" CheckBoxValue="1"
                 Text="Sincronizar Menú (productos y categorías)" />

        <!-- Sync Inventory Checkbox -->
        <Control Id="SyncInventoryCheck" Type="CheckBox" X="35" Y="148" Width="290" Height="17"
                 Property="SYNC_INVENTORY" CheckBoxValue="1"
                 Text="Sincronizar Inventario (stock y movimientos)" />

        <!-- Sync Tables Checkbox (disabled by default) -->
        <Control Id="SyncTablesCheck" Type="CheckBox" X="35" Y="166" Width="290" Height="17"
                 Property="SYNC_TABLES" CheckBoxValue="1"
                 Text="Sincronizar Mesas (estado en tiempo real)" />

        <!-- Connection Test Section -->
        <Control Id="ConnectionGroup" Type="GroupBox" X="20" Y="190" Width="230" Height="38"
                 Text="Prueba de Conexión" />

        <Control Id="TestConnection" Type="PushButton" X="30" Y="205" Width="100" Height="17"
                 Text="Probar Conexión" />

        <Control Id="ConnectionStatus" Type="Text" X="135" Y="207" Width="110" Height="15"
                 Transparent="yes" NoPrefix="yes" Text="" />

        <!-- Sync Interval -->
        <Control Id="IntervalGroup" Type="GroupBox" X="255" Y="190" Width="95" Height="38"
                 Text="Intervalo" />

        <Control Id="IntervalEdit" Type="Edit" X="265" Y="205" Width="40" Height="15"
                 Property="SYNC_INTERVAL" />

        <Control Id="IntervalLabel" Type="Text" X="310" Y="207" Width="35" Height="15"
                 Transparent="yes" NoPrefix="yes" Text="seg" />

        <!-- Navigation Buttons -->
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17"
                 Text="!(loc.WixUIBack)" />

        <Control Id="Cancel" Type="PushButton" X="236" Y="243" Width="56" Height="17"
                 Cancel="yes" Text="!(loc.WixUICancel)" />

        <Control Id="Next" Type="PushButton" X="298" Y="243" Width="56" Height="17"
                 Default="yes" Text="!(loc.WixUINext)" />

      </Dialog>
    </UI>

  </Fragment>

</Wix>
